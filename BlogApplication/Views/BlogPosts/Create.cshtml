@model BlogApplication.Models.BlogPost

@{
    ViewBag.Title = "Create Blog";
}

<h2 style="text-align:center; color:red;">Create Blog</h2>


@using (Html.BeginForm("Create", "BlogPosts", FormMethod.Post, new { enctype= "Multipart/form-data " }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="text-align:center; color:red;">This is the BlogPost.</h4>
        <hr />
        @Html.ValidationSummary(true, "**This is the create page**", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Created, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Created, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Created, "**Please input the date and the time**", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Updated, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Updated, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Updated, "**Updated should be required**", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "**Please input any topic you want**", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Body, "**Input the body content please**", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MediaUrl, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input name="image" type="file" class="form-control" id="fileUpload" />
                
                @Html.ValidationMessageFor(model => model.MediaUrl, "**Insert pictures**", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Published, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Published)
                    @Html.ValidationMessageFor(model => model.Published, "**Please choose the published,Thanks**", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" style="background-color:green;margin-left:250px;"value="Create" class="btn btn-default" />
            </div>
        </div>

        <p style="color:violet;text-align:center;">Please click the following picture to check the steps of creating the blog: </p>
        <a href="https://www.youtube.com/watch?v=NdVHrTRD3wU">
            <img src="https://www.wikihow.com/images/thumb/1/1a/Create-a-Blogger-Blog-Step-3-Version-2.jpg/aid362369-v4-728px-Create-a-Blogger-Blog-Step-3-Version-2.jpg" style="width:250px;height:250px;margin-left:320px;" />
        </a>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<style>
body { background-image: url("https://media.timeout.com/images/102437053/630/472/image.jpg") }
</style>

@section Scripts {


    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script type="text/javascript">
     $(function () {
        tinymce.init({
        selector: '#Body'
    });
    });
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}

